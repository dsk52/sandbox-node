{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "esnext",
    "removeComments": true,
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
