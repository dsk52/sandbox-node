{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["es2020"],
    "typeRoots": ["node_modules/@types"]
  },
  "files": ["@types/global.d.ts"]
}
